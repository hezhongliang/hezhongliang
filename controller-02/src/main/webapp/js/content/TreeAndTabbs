<script type="text/javascript">
function getTreeData(){
	    var tree_data = "";
	            $.ajax({
	                url:"<%=request.getContextPath()%>/crud/queryTree.do",
	                type:"post",
	                dataType:"json",
	                async:false,
	                success:function(data){
	                    tree_data = data;
	                },
	                error:function(){
	                    alert("查询出错");
	                }
	            });
	            return tree_data;
	       /*     var tree = [
	                       {
	                    	   text: "菜单",
	                       },
	                       {
	                    	    text: "11",
	                    	    href:"user/toqueryAll.do",
	                    	    nodes: [
	                    	      {
	                    	        text: "Child 1",
	                    	        href:"",
	                    	      },
	                    	      {
	                    	        text: "Child 2"
	                    	      }
	                    	    ]
	                    	  },
	                    	  {
	                    	    text: "22",
	                    	    href:"user/toqueryLogo.do",
	                    	  },
	                    	  {
	                    	    text: "Parent 3"
	                    	  }
	                    	];                  
	            return tree; */
	        }

	//调用treeview方法
	$('#tree').treeview(
	                {
	                    data:getTreeData(),
	                    onNodeSelected:function(event,node){
	                       // alert(node.href);
	                        if(node.href!=null && node.href!=""){
	                            $.ajax({
	                                url:"<%=request.getContextPath()%>/"+node.href,
	                                type:"post",
	                                success:function(data){
	                                    $.addtabs.add({
	                                        id:node.id,
	                                        title:node.text,
	                                        content:data,
	                                    })    
	                                }
	                            })
	                        }
	                        
	                    }
	                })
</script>
