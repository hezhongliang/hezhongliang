---批量删除
	function del(){
	var rows= $("#mytable").bootstrapTable("getSelections");
	if (rows.length>=1) {
		var id="";
		for (var i = 0; i < rows.length; i++) {
			id+=rows[i].id+",";
		}
		$.ajax({
			url:"<%=request.getContextPath()%>/crud/del.do",
			type:"post",
			data:{"bid":id},
			dataType:"text",
			success:function (msg){
				location.reload();
			}
			
		})
		}else{
				alert("请至少选择一条数据")
			}
		}

