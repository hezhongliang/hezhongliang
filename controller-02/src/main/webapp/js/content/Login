<script type="text/javascript">
function mylogin(){
	$.ajax({
		url:"<%=request.getContextPath()%>/user/login.do",
		type:'post',
		data:$("#loginform").serialize(),
		success:function(info){
			var str = '网络异常';
			if(info == '0'){
				alert('请注册');
			}
			if(info == '1'){
				alert('密码错误！！');
			}
			if(info == '2'){
				alert('登录成功！！');
				location.href="<%=request.getContextPath()%>/list.jsp"
			}
			
		
		}
	})
}
</script>
